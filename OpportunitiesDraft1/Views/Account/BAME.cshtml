@model OpportunitiesDraft1.ViewModels.BAMEViewModel

@{
   var photoPath = "~/Images/noimage.jpg";
}

<div style="position:relative; top:80px;">
    <div style="margin: auto;">
        <div class="card mx-auto login-container">
            <div class="card-header text-center boldText">BAME Owned Business</div>
            <div class="card-body login-container">
                <form asp-controller="account" asp-action="BAME" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input class="login-input" asp-for="BusinessName" placeholder="Business Name">
                        <span asp-validation-for="BusinessName" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" asp-for="Photo" class="custom-file-input" id="photoPath">
                            <label class="custom-file-label" asp-for="Photo">Choose photo</label>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label class="boldText" asp-for="Statement">Statement</label>
                        <textarea asp-for="Statement" class="form-control" id="Statement" rows="2"></textarea>
                    </div>
                    <div class="form-group mt-3">
                        <label class="boldText" asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" id="Description" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="boldText">Media</label>

                        <div>
                            <input class="login-input" asp-for="WebsiteLink" placeholder="Website Link">
                            <span asp-validation-for="WebsiteLink" class="text-danger"></span>
                        </div>
                        <div>
                            <input class="login-input" asp-for="FacebookLink" placeholder="Facebook Link">
                            <span asp-validation-for="FacebookLink" class="text-danger"></span>
                        </div>
                        <div>
                            <input class="login-input" asp-for="InstagramLink" placeholder="Instagram Link">
                            <span asp-validation-for="InstagramLink" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center mt-5"><button type="submit" class="btn btn-dark ">Submit</button></div>


                </form>


            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
    </script>
}