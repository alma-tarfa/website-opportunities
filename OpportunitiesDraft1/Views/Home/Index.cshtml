@ViewBag.Title
@model OpportunitiesDraft1.ViewModels.NewsletterViewModel
<div class="container" style="position:relative;position: absolute; left: 0;">

    <div class="OpportunistHome">
        <div class="OpportunistHomeVideo" style="position:relative;bottom:0; ">
            <div class="row ">
                <div class="col"><img src="~/Images/Main1.jpeg" style="width:100%;height:100%;object-fit: cover;" /></div>
                <div class="col mt-5 text-center indexText">
                    <div class="my-4"><h3 class="ml-3">Opportunitees</h3></div>

                    <p class="mb-3">Bringing Supporters and Opportunists together</p>
                    <iframe width="420" height="315"
                            src="https://www.youtube.com/embed/v=n0_eRfVvywg&list=PLytlOstEbruhycG5-PzMEVHjDWYAOK9Kh&loop=1" frameborder="0" allowfullscreen>
                    </iframe>
                </div>
                <div class="col">
                    <img src="~/Images/Main2.jpeg" style="width: 100%;height: 100%; object-fit: cover;" />
                </div>
            </div>
        </div>
        <div class="OpportunistHomeSection" class="row" style="width:100vw; height:70%; margin-left:0;">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 fitImage" src="~/Images/Partners1.jpeg" alt="First slide">
                        <div class="card w-100 ml-auto" style="top:45%; position: absolute; right: 0; left: 0">
                            <div class="card-body text-center">
                                <h5 class="card-title">Ready to become a Partner</h5>
                                <button class="btn btn-dark" onclick="location.href='@Url.Action("registerPartner", "account")'">Contact Us</button>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 fitImage" src="~/Images/Events.jpeg" alt="Second slide">
                        <div class="card w-100 ml-auto" style="background: #C0C0C0; top:45%; position:absolute; right:0; left:0; color:#47525e">
                            <div class="card-body text-center">
                                <h5 class="card-title">Want to stay up to date with our latest news and events</h5>
                                <button class="btn btn-dark mt-4" data-toggle="modal" data-target="#NewsletterModal">
                                    Subscribe to our NewsLetter
                                </button>
                            </div>

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 fitImage" src="~/Images/BAME.jpeg" alt="Third slide">
                        <div class="card w-100 ml-auto" style="background:#984E4D;top:45%; position:absolute; right:0; left:0;">
                            <div class="card-body text-center">
                                <h5 class="card-title">Are you a BAME-owned Business and want to be featured</h5>
                                <button class="btn btn-dark" onclick="location.href='@Url.Action("BAME", "account")'">Contact Us</button>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 fitImage" src="~/Images/Opportunist1.jpeg" alt="Fourth slide">
                        <div class="card w-100 ml-auto" style="background:#557B97; top:45%; position:absolute; right:0; left:0;">
                            <div class="card-body text-center">
                                <h5 class="card-title">Ready to be an Opportunist</h5>
                                <button class="btn btn-dark" onclick="location.href='@Url.Action("registerOpportunist", "account")'">Join Now</button>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="OpportunistHomeSection mt-5" style="position:relative;">
            <div class="card w-50 mx-auto h-100" style="overflow-y:auto">
                <div class="card-header text-center boldText">News Feed</div>
                <div class="card-body text-center">
                    <a class="twitter-timeline" href="https://twitter.com/nomayo_evelyn?ref_src=twsrc%5Etfw">Tweets by nomayo_evelyn</a>
                </div>
            </div>
        </div>
        <div class="OpportunistHomeSection" style="height:20vh;">
            <footer class="border-top footer text-muted" style="position:absolute; margin-top:-100px; left:0;bottom: 0; width: 100%; /* Height of the footer*/ height: 100px;">
                <div class="container">
                    <div class="footer-copyright text-center py-3">
                        &copy; 2020 - All Rights Reserved - Opportunitees
                        <div>
                            <span class="social-icons"><i class="fa fa-linkedin-square"></i></span>
                            <span class="social-icons"><i class="fa fa-youtube-square"></i></span>
                            <span class="social-icons"><i class="fa fa-instagram"></i></span>
                        </div>
                    </div>

                </div>
            </footer>
        </div>

    </div>



</div>
<div class="modal fade" id="NewsletterModal" tabindex="-1" role="dialog" aria-labelledby="NewsletterModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="background: #e0ddd8;">
            <div class="modal-header">
                <h5 class="modal-title" id="NewsletterModalTitle">Sign up to Our Mailing List</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card mx-auto login-container" style="border:none;">
                    <form asp-controller="Home" asp-action="Newsletter" method="post">
                        <div class="form-group">
                            <input class="login-input" asp-for="Name" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input class="login-input" asp-for="Email" placeholder="Email">
                        </div>
                        <div class="text-center"><button type="submit" class="btn btn-dark">Sign up</button></div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
